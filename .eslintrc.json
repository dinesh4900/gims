{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "prettier"
  ],
  "extends": [
    "@nuxtjs/eslint-config-typescript"
  ],
  "rules": {
    "vue/multi-word-component-names": "off",
    "vue/html-self-closing": ["error", {
      "html": {
        "void": "always"
      }
    }],
    "vue/max-attributes-per-line": 1,
    "space-before-function-paren": 0,
    "no-use-before-define": 0,
    "no-multiple-empty-lines": 0,
    "arrow-parens": 0
  }
}