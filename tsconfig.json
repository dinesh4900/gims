{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "baseUrl": "./",
    "paths":{ 
      "~/utils/*": ["utils/*"],
      "~/repos/*": ["repos/*"],
      "~/apollo/*": ["apollo/*"],
      "~/types/*": ["types/*"],
      "~/src/*": ["src/*"],
      "~/helpers/*": ["helpers/*"],
      "~/plugins/*": ["plugins/*"]
    }
  }
}
